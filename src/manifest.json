{
  "name": "KP Pomagač",
  "description": "Dodatne opcije za KP sajt: Brzi pregled oglasa, Noćni režim, Uveličaj sliku na klik, Plutajuća traka sa informacijama, Proširi sajt.",
  "version": "2.0.0",
  
  "author": "Stefan Marjanov",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": [
    "storage"
  ],
  "host_permissions": [
	  "https://novi.kupujemprodajem.com/*"
  ],
  "content_scripts": [ 
  {
    "js": [ "jquery.min.js",  "content.js" ],
    "matches": [ "https://novi.kupujemprodajem.com/*"],
	"run_at": "document_start"
  },
  {
	"css": ["style.css"],
    "matches": [ "https://novi.kupujemprodajem.com/*"]
  }
  ],

  "action": {
    "name": "KP Promagač",
    "icons": { "16": "icon16.png",
			   "32": "icon32.png",
			   "48": "icon48.png",
			   "128": "icon128.png" },
    "default_icon": "icon32.png",
	"default_popup": "options.html"
  },
   "icons": {
	   "16": "icon16.png",
	   "32": "icon32.png",
	   "48": "icon48.png",
	   "128": "icon128.png"
	},
  "manifest_version": 3
}